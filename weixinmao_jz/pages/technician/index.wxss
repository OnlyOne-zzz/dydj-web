page{
    background-color: #f1f1f1;
}
.main{
    width: 100%;
    margin: 0px;
    padding: 10px;
    box-sizing: border-box;
}
.list{
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 2px 2px 5px #999;
    padding: 5px;
    box-sizing: border-box;
    margin-bottom: 10px;
}
.headerimg{
    width: 80px;
    height: 80px;
    border-radius: 5px;
    overflow: hidden;
    display: inline-block;
    vertical-align: top;
}
.headerimg image{
    width: 80px;
    height: 80px;
    object-fit: cover;
}
.info{
    width: calc(100% - 80px);
    height: 40px;
    display: inline-block;
    padding-left: 10px;
    box-sizing: border-box;
}
.info > text{
    display: block;
    font-style: .8rem;
    color: #555;
}
.info>text:nth-of-type(2){
    font-size: .7rem;
    color: #3c9bdf;
}
.info>text:nth-of-type(3){
    font-size: .6rem;
    color: #3c9bdf;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
