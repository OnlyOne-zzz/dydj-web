page {
    background-color: #f5f5f5;
}

.type-container {
    width: 100%;
    height: 88rpx;
    background-color: #fff;
    overflow: hidden;
    border-bottom: 1rpx solid #F2f2f2;
}

.type-navbar {
    white-space: nowrap;
    height: 88rpx;
    background-color: #fff;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.type-box {
    width: 20%;
    box-sizing: content-box;
    font-size: 24rpx;
    line-height: 84rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}

.type-navbar-item {
    border-bottom: 4rpx solid #fff;
}

.type-item-on {
    border-bottom: 4rpx solid #e64340;
}

.container {
    background-color: #f5f5f5;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
}

.container .orderlist {
    width: 700rpx;
    display: flex;
    flex-direction: column;
    background: #FFF;
    margin-top: 20rpx;
    border-radius: 15rpx;
}

.container .orderlist .orderid {
    border-bottom: 1rpx solid #efefef;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-left: 20rpx;
    font-size: .8rem;
}

.container .orderlist .orderid image {
    /* width: 60rpx;
    height: 60rpx; */
}

.container .orderlist .content {
    font-size: .8rem;
    border-bottom: 1rpx solid #efefef;
}

.container .orderlist .content image {
    width: 100%;
    border-radius: 5px;
}

.container .orderlist .content .item {
    color: #333;
}

.container .orderlist .content .payitem {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
}

.container .orderlist .content .payitem view {
    padding: 5px 15px;
    text-align: center;
    margin-right: 20rpx;
    border-radius: 8rpx;
    font-size: .6rem;
    color: #fff;
    background: #3c9bdf;
    border: 1rpx solid #3c9bdf;
}
.image{
    width: 40%;
    height: auto;
    display: inline-block;
    vertical-align: top;
    padding: 10px 10px;
    box-sizing: border-box;
}
.info{
    width: 60%;
    display: inline-block;
    vertical-align: top;
    padding: 10px 10px;
    box-sizing: border-box;
}