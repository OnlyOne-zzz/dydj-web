.container {
    position: relative;
    background: #eeeeee;
    width: auto;
    padding: 1.725rem 1.15rem 0;
}

.register {
    width: 720rpx;
    display: flex;
    flex-direction: column;
    border-radius: 0.538rem;
    margin-top: 1.15rem;
    background: #fff;
}

.register .item {
    display: flex;
    flex-direction: row;
    border-bottom: 2rpx solid #bfbfbf;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 40rpx;
}

.register .item text {
    color: #747474;
}

.register .item input {
    width: 400rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 20rpx;
}

.register .item button {
    width: 200rpx;
    font-size: .7rem;
    height: 80rpx;
    line-height: 80rpx;
    align-self: center;
}

.btnuser {
    width: 750rpx;
    margin-top: 40rpx;
}

.btnuser button {
    width: 650rpx;
    align-self: center;
    background: #0180cf;
    color: #FFF;
    font-size: 1rem;
}