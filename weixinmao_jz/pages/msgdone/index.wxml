<form reportSubmit bindsubmit="pay">
    <view class="container">
        <view class="addressimg">
            <image mode="heightFix" src="../../resource/images/addr-line.png"></image>
        </view>
        <view class="userInfo">
            <view>
                <image mode='heightFix' src="../../resource/images/user.png"></image> 
                <input type="text" value="{{addressinfo.name}}" placeholder="请输入您的姓名"/>
            </view>
            <view>
                <image mode='heightFix' src="../../resource/images/phone.png"></image> 
                <input type="text" value="{{addressinfo.tel}}" placeholder="请输入您的电话"/>
            </view>
            <view>
                <image mode='heightFix' src="../../resource/images/addr.png"></image> 
                <input type="text" value="{{addressinfo.address}}{{addressinfo.daddress}}" placeholder="请选择您的地址" disabled="disabled" bindtap="getaddress"/>
                <image class="right" mode='heightFix' src="../../resource/images/right.png"></image> 
            </view>
            <view>
                <image mode='heightFix' src="../../resource/images/menpai.png"></image> 
                <input type="text" value="" placeholder="请输入详细的门牌号"/>
            </view>
        </view>
        <view class="addressimg">
            <image mode="heightFix" src="../../resource/images/addr-line.png"></image>
        </view>
        <view class="userInfo" style="padding-top: 0px">
            <view>
                <image mode='heightFix' src="../../resource/images/menpai.png"></image> 
                <picker mode="time" start="09:01" end="21:01" bindchange="bindTimeChange" style="width:100%">
                    <view class="listcontent">
                        <text>服务时间</text>
                        <text class="listTime" style="padding-right: 30px">{{time}}</text>
                    </view>
                </picker>
                <image class="right" mode='heightFix' src="../../resource/images/right.png"></image> 
            </view>
            <view>
                <image mode='heightFix' src="../../resource/images/menpai.png"></image> 
                <view class="listcontent">
                    <text>服务人员</text>
                    <text class="listTime">张小辉</text>
                </view>
            </view>
        </view>
