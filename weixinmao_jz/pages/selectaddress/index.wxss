page {
    background-color: #f0f0f0;
}

.container {
    width: 750rpx;
}

.newaddress {
    width: 750rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    padding-bottom: 5px;
    background: #FFF;
    margin-bottom: 10rpx;
    position: relative;
}
.default{
    width: 100%;
    height: 300px;
    line-height: 300px;
    text-align: center;
    font-size: 1rem;
    color: #999;
}
.newaddress .showaddress {
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.newaddress .showaddress view:nth-child(1) {
    font-weight: 600;
    font-size: .9rem;
}

.newaddress .showaddress view:nth-child(2) {
    /* width: 20px;
    font-size: .7rem;
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%); */
}
.newaddress > view:nth-of-type(2){
    width: 20px;
    font-size: .7rem;
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
}
.newaddress image {
    width: 45rpx;
    height: 45rpx;
    margin-top: 10rpx;
}
.hr{
    width: 100%;
    height: 1px;
    background-color: #e6e6e6;
    margin-top: 5px;
}
.chaozuo>view{
    display: inline-block;
    width: 50%;
    height: 30px;
    line-height: 30px;
    vertical-align: top;
}
.redios>text:nth-of-type(1){
    display: inline-block;
    width: 15px;
    height: 15px;
    border: 1px solid #e6e6e6;
    border-radius: 50%;
    vertical-align: middle;
}
.redios>text:nth-of-type(2){
    display: inline-block;
    width: auto;
    height: 30px;
    line-height: 30px;
    vertical-align: middle;
    margin-left: 5px;
    font-size: .8rem;
    font-weight: initial;
}
.chaozhuo{
    text-align: right;
}
.chaozhuo>text{
    display: inline-block;
    height: 30px;
    line-height: 30px;
    padding: 0px 15px;
    font-size: .8rem;
}
.add{
    width: 50%;
    height: 40px;
    line-height: 40px;
    border-radius: 40px;
    background-color: #3c9bdf;
    color: #fff;
    font-size: 1rem;
    text-align: center;
    position: fixed;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
}
.active{
    background-color: #3c9bdf !important;
}