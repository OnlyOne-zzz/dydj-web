page {
    background-color: #f0f0f0;
}

.container {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.newaddress {
    width: 750rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    background: #FFF;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 10rpx;
}

.newaddress .showaddress {
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
}

.newaddress .showaddress view:nth-child(1) {
    font-weight: 600;
    font-size: .9rem;
}

.newaddress .showaddress view:nth-child(2) {
    font-size: .7rem;
}

.newaddress image {
    width: 45rpx;
    height: 45rpx;
    margin-top: 10rpx;
}